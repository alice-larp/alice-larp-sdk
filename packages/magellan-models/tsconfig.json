{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "target": "ES6",
        "lib": ["es2017"],
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "allowJs": true,
        "outDir": "./build",
        // TODO: Figure out what prevents enable it and remove
        "noImplicitAny": false,
    },
    "typeRoots": [
        "./node_modules/@types"
      ],
    "include": [
        "**/*.ts"
    ]
}
